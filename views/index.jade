!!! transitional
html
head
  meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title Penginputan Data Mahasiswa
    link(rel='stylesheet', type='text/css', href='stylesheets/view.css', media='all')
    script(type='text/javascript', src='javascripts/view.js')
    script(type='text/javascript', src='javascripts/calendar.js')
body(id="main_body")
    img#top(src='images/top.png', alt='')
    #form_container
      h1
        a Penginputan Data Mahasiswa
      form#form_569466.appnitro(method='post', action='')
        .form_description
          p Selamat Datang di Aplikasi Penginputan Data Mahasiswa
        ul
          #li_2
            label.description(for='element_2') Nama 
            div
              input#element_2.element.text.medium(name='element_2', type='text', maxlength='255', value='')
          #li_5
            label.description(for='element_5') Tanggal Lahir 
            div
            span
              input#element_5_1.element.text(name='element_5_1', size='2', maxlength='2', value='', type='text')
              | /
              label(for='element_5_1') DD
            span
              input#element_5_2.element.text(name='element_5_2', size='2', maxlength='2', value='', type='text')
              | /
              label(for='element_5_2') MM
            span
              input#element_5_3.element.text(name='element_5_3', size='4', maxlength='4', value='', type='text')
              label(for='element_5_3') YYYY
            span#calendar_5
              img#cal_img_5.datepicker(src='images/calendar.gif', alt='Pick a date.')
            script(type='text/javascript')
              Calendar.setup({
              inputField	 : "element_5_3",
              baseField    : "element_5",
              displayArea  : "calendar_5",
              button		 : "cal_img_5",
              ifFormat	 : "%B %e, %Y",
              onSelect	 : selectEuropeDate
              });
          #li_3
            label.description(for='element_3') Alamat 
            div
              textarea#element_3.element.text.medium(rows='3', cols='40')
          #li_4
            label.description(for='element_4') Jenis Kelamin 
            span
              input#element_4_1.element.radio(name='element_4', type='radio', value='1')
              label.choice(for='element_4_1') Laki-laki
              input#element_4_2.element.radio(name='element_4', type='radio', value='2')
              label.choice(for='element_4_2') Perempuan
          #li_6
            label.description(for='element_6') Jurusan yang dipilih 
            div
              select#element_6.element.select.medium(name='element_6')
                option(value='', selected='selected')
                option(value='1') Teknik Informatika (S1)
                option(value='2') Sistem Informasi (S1)
                option(value='3') Manajemen Informatika (D3)
          buttons
            input(type='hidden', name='form_id', value='569466')
            input#saveForm.button_text(type='submit', name='submit', value='Simpan')
      #footer
        | Created by Dzaky Alkaff
    img#bottom(src='images/bottom.png', alt='')
